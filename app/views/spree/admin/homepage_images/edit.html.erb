<%= form_for(:homepage_image, :url => admin_homepage_image_url, :html => { :method => :put, :multipart => true }) do |f| %>
  <table class="basic-table">
    <tr>
      <td><%= t("thumbnail") %>:</td>
      <td><%= link_to(image_tag(@homepage_image.attachment.url(:small)), @homepage_image.attachment.url(:standard)) %></td>
    </tr>
    <%= render :partial => "form", :locals => { :f => f } %>
  </table>
  <p class="form-buttons">
    <%= button t("update") %>
    <%= t('or') %> <%= link_to t("cancel"), admin_homepage_images_url, :id => "cancel_link" %>
  </p>
<% end %>
